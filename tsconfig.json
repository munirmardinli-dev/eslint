{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib/src",
    "rootDirs": ["src"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"]
}
